<UserControl x:Class="Sim.Controls.Views.ucBlackBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sim.Controls.Views"
             mc:Ignorable="d">
    <Grid Visibility="{Binding BlackBox}">
        <Border Background="Black" Opacity=".5"/>
        <Grid>
            <ProgressBar IsIndeterminate="{Binding StartProgress}" Foreground="White" Height="15" Width="200"/>
        </Grid>
    </Grid>
</UserControl>
