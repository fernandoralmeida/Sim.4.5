<Page x:Class="Sim.Sec.Governo.Legislacao.View.Pages.pTipos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:conv="clr-namespace:Sim.Mvvm.Converters;assembly=Sim.Mvvm"
      xmlns:vmp="clr-namespace:Sim.Sec.Governo.Legislacao.ViewModel.vmPages"
      mc:Ignorable="d" 
      SnapsToDevicePixels="True" UseLayoutRounding="True"
	Title="pTipos">
    <Page.DataContext>
        <vmp:vmTipos/>
    </Page.DataContext>
    <Page.Resources>
        <conv:Converter x:Key="MultConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Tipos" Margin="0,0,0,10" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox Text="{Binding NovoTipo}" Grid.Column="0" Grid.Row="0" Margin="2"/>
            <Button Content="Novo Tipo" Grid.Column="1" Grid.Row="0" Margin="2" Command="{Binding CommandInsertTipo}"/>
            <DataGrid AutoGenerateColumns="False" HorizontalScrollBarVisibility="Auto" HeadersVisibility="Column" ItemsSource="{Binding Tipos}" IsReadOnly="True" Grid.Row="1" Grid.ColumnSpan="2" Margin="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Codigo}" ClipboardContentBinding="{x:Null}" Header="Código"/>
                    <DataGridTextColumn Binding="{Binding Nome}" ClipboardContentBinding="{x:Null}" Header="Tipo"/>
                    <DataGridTemplateColumn Header="Bloqueado">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Name="tipo" Content="Sim" VerticalAlignment="Center" IsChecked="{Binding Bloqueado}" HorizontalAlignment="Center" Command="{Binding DataContext.CommandBlockTipo, RelativeSource={RelativeSource AncestorType={x:Type Page}}}">
                                    <CheckBox.CommandParameter>
                                        <MultiBinding Converter="{StaticResource MultConverter}">
                                            <Binding Path="Codigo"/>
                                            <Binding ElementName="tipo"/>
                                        </MultiBinding>
                                    </CheckBox.CommandParameter>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
