<Window x:Class="Sim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:shared="clr-namespace:Sim.Controls.Views;assembly=Sim.Controls"
        Style="{DynamicResource WindowTheme}"
        WindowStartupLocation="CenterScreen"
        Title="Sim" Height="500" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Load fix white -->
            <Border Visibility="{Binding StartClosed}" Background="{DynamicResource Accent}" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <!-- Frame Content -->
            <Frame Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="_globalframe" Navigating="NavigationWindow_Navigating" Margin="0" Focusable="False" NavigationUIVisibility="Hidden" />
            <!-- Top Menu -->
            <StackPanel Height="32" Visibility="{Binding MenuOn}" Grid.Row="0" Grid.Column="1" WindowChrome.IsHitTestVisibleInChrome="True" Orientation="Horizontal" IsVisibleChanged="Grid_IsVisibleChanged" VerticalAlignment="Top">
                <Button Margin="5,0,0,0" Content="{Binding SysName}" Command="{Binding CommandGoPage}" CommandParameter="../View/pModulos.xaml" Style="{StaticResource SystemButtonLink}" />
                <Line Visibility="{Binding ModView}" X1=".5" Y1="3" X2=".5" Y2="12" Margin="5,0" VerticalAlignment="Center" Stroke="{DynamicResource SeparatorBackground}"/>
                <Button Visibility="{Binding ModView}" Content="{Binding Modulo}" Command="{Binding CommandGoPage}" CommandParameter="{Binding UriModulo}" Style="{StaticResource SystemButtonLink}" />
                <Line  Visibility="{Binding SubModView}" X1=".5" Y1="3" X2=".5" Y2="12" Margin="5,0" VerticalAlignment="Center" Stroke="{DynamicResource SeparatorBackground}"/>
                <Button Visibility="{Binding SubModView}" Content="{Binding SubModulo}" Command="{Binding CommandGoPage}" CommandParameter="{Binding UriSubModulo}" Style="{StaticResource SystemButtonLink}" />
                <Line Visibility="{Binding PageView}" X1=".5" Y1="3" X2=".5" Y2="12" Margin="5,0" VerticalAlignment="Center" Stroke="{DynamicResource SeparatorBackground}"/>
                <Button Visibility="{Binding PageView}" Content="{Binding Pagina}" Command="{Binding CommandGoPage}" Style="{StaticResource SystemButtonLink}" />
            </StackPanel>
            <!-- Operador -->
            <StackPanel Margin="0,0,125,0" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True" Visibility="{Binding MenuOn}" IsVisibleChanged="Grid_IsVisibleChanged">
                <Button Margin="0" Content="{Binding Operador}" HorizontalAlignment="Left" Command="{Binding CommandLogOff}" Style="{StaticResource SystemButtonLink}"/>
            </StackPanel>
            <!-- Menu Lateral -->
            <Grid Grid.Column="0" MaxWidth="38" Visibility="{Binding MenuOn}" IsVisibleChanged="Lateral_IsVisibleChanged" Grid.RowSpan="2">
                <!---->
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource AccentColor}"/>
                </Grid.Background>
                <StackPanel Background="{DynamicResource WindowBackground}" VerticalAlignment="Center" Orientation="Vertical">
                    <!-- Profile Settings -->
                    <Button ToolTip="Meu Perfil!" Height="32" Width="38" HorizontalAlignment="Left" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="/Sim.Account;component/View/pProfile.xaml">
                        <Button.Content>
                            <Image Source="{Binding IconUser}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Margin="4" />
                        </Button.Content>
                    </Button>
                    <!-- Theme Settings -->
                    <Button ToolTip="Temas" Height="32" Width="38" HorizontalAlignment="Left" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="../View/pToolsTheme.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M20.71,4.63L19.37,3.29C19,2.9 18.35,2.9 17.96,3.29L9,12.25L11.75,15L20.71,6.04C21.1,5.65 21.1,5 20.71,4.63M7,14A3,3 0 0,0 4,17C4,18.31 2.84,19 2,19C2.92,20.22 4.5,21 6,21A4,4 0 0,0 10,17A3,3 0 0,0 7,14Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>
                    <!-- Print Settings -->
                    <Button ToolTip="Cabeçalho de Impressão" Height="32" Width="38" HorizontalAlignment="Left" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="../View/pToolsPrint.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M18,2V6H6V2H18M19,11A1,1 0 0,0 20,10A1,1 0 0,0 19,9A1,1 0 0,0 18,10A1,1 0 0,0 19,11M16,18V13H8V18H16M19,7A3,3 0 0,1 22,10V16H18V20H6V16H2V10A3,3 0 0,1 5,7H19M15,24V22H17V24H15M11,24V22H13V24H11M7,24V22H9V24H7Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>
                    <!-- System Info 
                    <Button ToolTip="Informações do Sistema" Height="32" Width="38" HorizontalAlignment="Left" Visibility="{Binding IsAdmin}" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="/Sim.Monitoring;component/View/vShow.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>-->
                    <!-- Data Base -->
                    <Button ToolTip="Central de Banco de Dados" Height="32" Width="38" HorizontalAlignment="Left" Visibility="{Binding IsAdmin}" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="../View/pToolsDB.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>
                    <!-- Account Settings -->
                    <Button ToolTip="Central de Contas" Height="32" Width="38" HorizontalAlignment="Left" Visibility="{Binding IsAdmin}" Command="{Binding CommandNavigate}" Style="{StaticResource SystemButton}"
                                                CommandParameter="/Sim.Account;component/View/pAccounts.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M9,4A4,4 0 0,0 5,8A4,4 0 0,0 9,12A4,4 0 0,0 13,8A4,4 0 0,0 9,4M9,14C6.33,14 1,15.33 1,18V20H12.08C12.03,19.67 12,19.34 12,19C12,17.5 12.5,16 13.41,14.8C11.88,14.28 10.18,14 9,14M18,14C17.87,14 17.76,14.09 17.74,14.21L17.55,15.53C17.25,15.66 16.96,15.82 16.7,16L15.46,15.5C15.35,15.5 15.22,15.5 15.15,15.63L14.15,17.36C14.09,17.47 14.11,17.6 14.21,17.68L15.27,18.5C15.25,18.67 15.24,18.83 15.24,19C15.24,19.17 15.25,19.33 15.27,19.5L14.21,20.32C14.12,20.4 14.09,20.53 14.15,20.64L15.15,22.37C15.21,22.5 15.34,22.5 15.46,22.5L16.7,22C16.96,22.18 17.24,22.35 17.55,22.47L17.74,23.79C17.76,23.91 17.86,24 18,24H20C20.11,24 20.22,23.91 20.24,23.79L20.43,22.47C20.73,22.34 21,22.18 21.27,22L22.5,22.5C22.63,22.5 22.76,22.5 22.83,22.37L23.83,20.64C23.89,20.53 23.86,20.4 23.77,20.32L22.7,19.5C22.72,19.33 22.74,19.17 22.74,19C22.74,18.83 22.73,18.67 22.7,18.5L23.76,17.68C23.85,17.6 23.88,17.47 23.82,17.36L22.82,15.63C22.76,15.5 22.63,15.5 22.5,15.5L21.27,16C21,15.82 20.73,15.65 20.42,15.53L20.23,14.21C20.22,14.09 20.11,14 20,14M19,17.5A1.5,1.5 0 0,1 20.5,19A1.5,1.5 0 0,1 19,20.5C18.16,20.5 17.5,19.83 17.5,19A1.5,1.5 0 0,1 19,17.5Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>
                    <!-- System Help 
                    <Button ToolTip="Ajuda" Height="32" Width="38" HorizontalAlignment="Left" Style="{StaticResource SystemButton}"
                                                CommandParameter="/Sim.Modulo.Autenticacao;component/View/pAccounts.xaml">
                        <Button.Content>
                            <Path Stretch="Uniform"
                                                          Data="M15.07,11.25L14.17,12.17C13.45,12.89 13,13.5 13,15H11V14.5C11,13.39 11.45,12.39 12.17,11.67L13.41,10.41C13.78,10.05 14,9.55 14,9C14,7.89 13.1,7 12,7A2,2 0 0,0 10,9H8A4,4 0 0,1 12,5A4,4 0 0,1 16,9C16,9.88 15.64,10.67 15.07,11.25M13,19H11V17H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z"
                                                          Width="16" Height="16"
                                                          Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"/>
                        </Button.Content>
                    </Button>-->
                </StackPanel>
            </Grid>
            <!-- BrowseBack -->
            <Grid Grid.Row="0" HorizontalAlignment="Left" Visibility="{Binding MenuOn}" IsVisibleChanged="Lateral_IsVisibleChanged">
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource WindowBackgroundColor}"/>
                </Grid.Background>
                <Button ToolTip="Retornar" IsEnabled="{Binding ButtonBrowseBack}" Grid.Column="1" Height="32" Width="38" Command="{Binding CommandBrowseBack}" Style="{StaticResource SystemButtonArrow}" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Content>
                        <Path Stretch="Uniform" Height="12" Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                  Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"  />
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
        <!-- Message Box -->
        <shared:ucDialogBox Grid.ColumnSpan="3" Grid.RowSpan="2" />
    </Grid>

   
    <Window.Resources>
        <ResourceDictionary>

            <Storyboard x:Key="ShowTopMenu" >
                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-50,125,0" To="0,0,125,0" DecelerationRatio=".9" Duration="0:0:.5" />
            </Storyboard>
            
            <Storyboard x:Key="BrowseBack" >
                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-40,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:.5" />
            </Storyboard>

            <Storyboard x:Key="ShowPage" >
                <ThicknessAnimation Storyboard.TargetProperty="Margin" From="150,0,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:.5" />
            </Storyboard>

            <Storyboard x:Key="FadingPage">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1" BeginTime="0:0:0" />
            </Storyboard>

            <ResourceDictionary.MergedDictionaries>
                 <!--                
                <ResourceDictionary Source="/Sim.UI;component/Themes/Modern/ModernUI.xaml"/>
                <ResourceDictionary Source="/Sim.UI;component/Themes/Modern/ModernUI.Light.xaml"/>
                
                <ResourceDictionary Source="/Sim.UI;component/Themes/Modern/ModernUI.BingImage.xaml"/> -->
                
                <ResourceDictionary Source="/Sim.UI;component/Themes/WindowTheme.xaml"/>               

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
</Window>
